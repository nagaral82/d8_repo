<h1 class="text-left">Create Article</h1>
<div class="alert"></div>
<form id="create-article" {{action "createArticle" on="submit"}}>
	<div class="form-group">
		{{ input placeholder="Title" class="form-control" type="text" name="title" value=title required="required"}}
	</div>
	<div class="form-group">
		{{ textarea placeholder="Content" rows="5" class="form-control" name="content" required="required" }}
	</div>
	<div class="form-group">
		{{ input placeholder="Author" class="form-control" type="text" name="author" required="required" }}
	</div>
	<div class="form-group">
		 <button type="submit" class="btn btn-sm btn-primary"><span class="glyphicon"></span> Save</button>
	</div>
</form>